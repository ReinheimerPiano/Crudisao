@model IEnumerable<Crudisao.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h2>Pedidos</h2>

<p>
    <a asp-action="SelectProduto">Fazer Pedido</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                Total
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @string.Format("{0:C}", item.Itens.Sum(i => i.Produto.Preco))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nome)
                </td>
                <td>
                    <a asp-action="Carrinho" asp-route-id="@item.ID">Carrinho</a>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
